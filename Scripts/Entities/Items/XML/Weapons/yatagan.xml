<!--

actions:

NO ESTAN EN RIFLE.XML
Each action can be defined, given a custom animation, and sound effects. In fact you can give them multiple animations, and it’ll randomly pick from them. Worth noting though, that target=owner is the third person rig associated with the character (usually his visible shadow.) The other, target=firstperson should be obvious, it calls the arms to action.
-->
	<actions>
		<action name="select">
<!--			<animation target="firstperson" name="select_01" />-->
			<animation target="owner" name="select" />
<!--			<sound target="firstperson" name="sounds/weapons:punch:select_fp" radius="2" />-->
			<sound target="thirdperson" name="sounds/weapons:punch:select_3p" radius="2" />
		</action>
		<action name="deselect">
<!--			<animation target="firstperson" name="deselect_01" />-->
<!--			<animation target="owner" name="deselect" />-->
<!--			<sound target="firstperson" name="sounds/weapons:punch:deselect_fp" radius="2" />-->
			<sound target="thirdperson" name="sounds/weapons:punch:deselect_3p" radius="2" />
		</action>
<!--		<action name="idle">-->
<!--			<animation target="firstperson" name="idle_01" />-->
<!--			<animation target="owner" name="melee_idle" />-->
<!--		</action>-->
		<action name="melee">
<!--			<animation target="firstperson" name="strike_01" />-->
<!--			<animation target="owner" name="melee_punch_right" />-->
<!--			<sound target="firstperson" name="sounds/weapons:punch:fire_fp" radius="2" />-->
			<sound target="thirdperson" name="sounds/weapons:punch:fire_3p" radius="2" />
		</action>
		<action name="hit">
<!--			<sound target="firstperson" name="sounds/physics:bullets/impacts:melee_impact" radius="5" />-->
			<sound target="thirdperson" name="sounds/physics:bullets/impacts:melee_impact" radius="5" />
		</action>

	</actions>
	<firemodes>
		<firemode name="melee" type="Melee">
			<melee>
				<param name="helper" value="collision" />
				<param name="damage" value="80" />
				<param name="impulse" value="200" />
				<param name="delay" value="0.50" />
				<param name="duration" value="0.85" />
			</melee>
<!--			
			<actions>
				<param name="attack" value="melee" />
			</actions>
-->
		</firemode>
	</firemodes>
